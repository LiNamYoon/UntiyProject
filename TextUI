using UnityEngine;
using UnityEngine.UI; //Text UI를 접근할 때 사용한다.
using System.Collections;

public class ScoreManager : MonoBehaviour
{
    
    
    

    Text aa;  //Text 함수에 변수를 정하고


    void Awake()
    {
        aa = GetComponent<Text>(); //aa가 Text UI의 기능을 부여받는다.
        
    }


    void Update()
    {
        aa.text = "현재 점수 : "; //Text의 text변경 가능
        
    }
}
